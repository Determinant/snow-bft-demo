{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["dom", "es2016", "es2017", "esnext"],
        "jsx": "react",
        "typeRoots": ["./types", "./node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ]
}
